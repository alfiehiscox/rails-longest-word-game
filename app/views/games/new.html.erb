<div class="container-me">
  <h1>New Game</h1>
  <div class="grid">
    <% @grid.each do |letter| %>
      <div class="letter">
        <%= letter %>
      </div>
    <% end %>
  </div>
</div>

<div class="container-me">
  <h4>What is the longest word you can find?</h4>
  <form action="/score" method="POST" class="form-inline">
    <input class="form-control" type="text" name="word">
    <input class="btn btn-primary submit" type="submit" value="play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @grid %>
  </form>
</div>
